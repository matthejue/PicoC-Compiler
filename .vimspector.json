{
  "configurations": {
    "Debug": {
      "adapter": "debugpy",
      "configuration": {
        "name": "Debug",
        "type": "python",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "python": "/usr/bin/python",
        "stopOnEntry": true,
        "justMyCode": true,
        "console": "externalTerminal",
        "debugOptions": [],
        "program": "${workspaceFolder}/test/parser_test.py",
        "args": [
          "./input.picoc",
          "./output.reti",
          "-p",
          "-S"
        ],
        "_comment": "args: [./input.picoc, ./output.reti, -p, -v, -a]"
      }
    }
  }
}
